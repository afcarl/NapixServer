{
  "_napix_version": 1.0 ,
  "Napix" : {
    "debug" : true,
    "daemon" : {
      "host" : "0.0.0.0",
      "port" : 8002
    },
    "loader" : {
        "autoreload" : true
    },
    "storage" : {
      "store" : "RedisHashStore",
      "counter" : "RedisCounter",
      "file" : {
        "directory" : "/tmp/napix"
      },
      "redis" : {
        "host" : "redis.napix.nx"
      }
    },
    "@notify" : {
      "url" : "http://localhost:8002/directory/",
      "delay" : 300
    },
    "auth" : {
      "auth_url" : "http://localhost:8003/auth/authorization/",
      "service" : "localhost:8002"
    },
    "managers" : {
      "directory" : "napixd.contrib.directory.NapixDirectoryManager"
    }
  },
  "hostfiles" : {
    "url":"sample"
  }
}
