{
  "_napix_version": 1.0 ,
  "Napix" : {
    "debug" : false,
    "description" : "The base Napix server",
    "daemon" : {
      "host" : "0.0.0.0",
      "port" : 8002
    },
    "loader" : {
        "autoreload" : true
    },
    "storage" : {
      "store" : "RedisHashStore",
      "counter" : "RedisCounter",
      "file" : {
        "directory" : "/tmp/napix"
      },
      "redis" : {
        "host" : "redis.napix.nx"
      }
    },
    "notify" : {
      "url" : "http://central.napix.nx/directory/",
      "credentials" : {
          "login" : "notification",
          "key" : "notification"
      },
      "delay" : 300
    },
    "auth" : {
      "auth_url" : "http://localhost:8003/auth/authorization/",
      "service" : "server.napix.nx:8002"
    },
    "managers" : {
      "company" : "napixd.contrib.invoice.service.CompanyManager"
    },
    "connectors" : {
        "django" : {
            "DATABASES" : {
                "default": {
                    "ENGINE": "django.db.backends.sqlite3",
                    "NAME": "/home/napix/sqlitedb",
                    "USER": "",
                    "PASSWORD": "",
                    "HOST": "",
                    "PORT": ""
                }
            }
        }
    }
  },
  "hostfiles" : {
    "url":"sample"
  }
}
